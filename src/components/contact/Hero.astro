---
import Title from "../Title.astro";
import { getImage } from "astro:assets";
import { Image } from "astro:assets";
import LogoDarkImage from "../../assets/logoDark.png";
import BackgroundImage from "../../assets/bg-img.png";
import CalendarIcon from "../../assets/calendar.svg";
import ClockIcon from "../../assets/clock.svg";
import MapIcon from "../../assets/map-pin.svg";
import "../../styles/contact.css";

const optimizedImage = await getImage({
  src: BackgroundImage,
  formats: ["avif", "webp", "jpeg"],
});
---

<div>
  <section
    class="inner_cover parallax-window"
    data-parallax="scroll"
    style={`background-image: url(${optimizedImage.src})`}
  >
    <div class="overlay_dark"></div>
    <div class="md:container">
      <div class="row justify-content-center align-items-center">
        <div class="col-12">
          <div class="inner_cover_content">
            <h3>contact us</h3>
          </div>
        </div>
      </div>

      <div class="breadcrumbs">
        <ul>
          <li><a href="#">Home</a> |</li>
          <li><span>Contact</span></li>
        </ul>
      </div>
    </div>
  </section>

  <section class="pb-10 pt-10">
    <div class="container-new">
      <Image src={LogoDarkImage} alt="Logo" width="160" />
      <div class="mt-10 flex flex-col lg:flex-row">
        <div class="pr-4">
          <div class="contact_info">
            <ul class="icon_list pt50">
              <li>
                <i class="ion-location"></i>
                <span> Hapugala, Wakwella Road,<br />Galle</span>
              </li>
              <li>
                <i class="ion-ios-telephone"></i>
                <span> 071 606 5912</span>
              </li>
              <li>
                <i class="ion-email-unread"></i>
                <span> eiesruhuna@gmail.com</span>
              </li>

              <li>
                <i class="ion-planet"></i>
                <span> www.Xbotix.com</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="flex-cont w-full pr-4">
          <form
            class="contact_form"
            action="mailto:eiesruhuna@gmail.com"
            method="post"
            enctype="text/plain"
          >
            <div class="form-group">
              <input type="text" class="form-control" placeholder="name" />
            </div>
            <div class="form-group">
              <input type="email" class="form-control" placeholder="email" />
            </div>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="subject" />
            </div>
            <div class="form-group">
              <textarea
                class="form-control"
                cols="4"
                rows="4"
                placeholder="massage"></textarea>
            </div>
            <div class="form-group text-right">
              <button class="btn btn-rounded btn-primary"> send massage</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
