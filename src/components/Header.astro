---
import { getImage } from "astro:assets";
import BackgroundImage from "../assets/bg-img.png";

const optimzedImage = await getImage({
  src: BackgroundImage,
  formats: ["avif", "webp", "jpeg"],
});
---

<div
  class="bg-cover bg-no-repeat bg-center relative flex justify-center items-center text-white font-medium text-4xl"
  style={`background-image: url(${optimzedImage.src}); height: 350px`}
>
  <!-- blacka mask -->
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>

  <h1
    class="z-10 underline underline-offset-8 decoration-secondary decoration-4 mt-16"
  >
    Register
  </h1>
</div>
