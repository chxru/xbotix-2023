---
interface Props {
  id: string;
  label: string;
  name: string;
}

const props = Astro.props;
---

<div class="my-2 flex items-center rounded border border-gray-200 pl-4">
  <input
    id={props.id}
    type="radio"
    autocomplete="off"
    value={props.id}
    name={props.name}
    class="h-4 w-4 border-gray-300 bg-gray-100 text-secondary focus:ring-2 focus:ring-secondary"
  />
  <label
    for={props.id}
    class="ml-2 w-full py-4 text-sm font-medium text-gray-900"
  >
    {props.label}
  </label>
</div>
