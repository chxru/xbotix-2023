---
import { Image } from "astro:assets";

interface Props {
  title: string;
  subtitle: string;
  icon: ImageMetadata;
}

const { title, subtitle, icon } = Astro.props;
---

<div class="flex flex-row w-1/2 md:w-1/3 items-center max-w-sm py-4">
  <img class="w-8 h-12" src={icon.src} alt={title} />

  <span class="flex flex-col px-4">
    <h1 class="text-lg uppercase font-medium mb-2">{title}</h1>
    <h2 class="text-sm text-subtitle">{subtitle}</h2>
  </span>
</div>
